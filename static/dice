<html>
<head>
<title>Liar's Dice</title>
<meta name="viewport" content="width=device-width,user-scalable=no">
<style>
div#all {
	width: 300px;
	padding: 3px;
	margin: 0;
}
body {
	margin: 0;
}

div.dice {
	border: 1px solid black;
	border-radius: 3px;
	width: 50px;
	height: 50px;
	margin: 3px;
	display: inline-block;
	text-align: center;
	font-size: 30px;
	font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
	line-height: 48px;
}
	
div.shake {
	animation-name: shake;
	animation-duration: 1s;
}

div#container {
	width: 300px;
	margin-left: auto;
	margin-right: auto;
}

div#buttons {
	margin-left: auto;
	margin-right: auto;
	width: 210px;
}
button {
	width: 100px;
	height: 50px;
}

@keyframes shake {
	0% { -webkit-transform: rotate(10deg); transform: rotate(10deg); }
	10% { -webkit-transform: rotate(-10deg); transform: rotate(-10deg); }
	20% { -webkit-transform: rotate(10deg); transform: rotate(10deg); }
	30% { -webkit-transform: rotate(-5deg); transform: rotate(-5deg); }
	40% { -webkit-transform: rotate(5deg); transform: rotate(5deg); }
	50% { -webkit-transform: rotate(-2.5deg); transform: rotate(-2.5deg); }
	60% { -webkit-transform: rotate(2.5deg); transform: rotate(2.5deg); }
	70% { -webkit-transform: rotate(-2.5deg); transform: rotate(-2.5deg); }
	80% { -webkit-transform: rotate(2.5deg); transform: rotate(2.5deg); }
	90% { -webkit-transform: rotate(-2.5deg); transform: rotate(-2.5deg); }
	100% { -webkit-transform: rotate(0deg); transform: rotate(0deg); }
}
</style>
<script type="text/javascript">
var start = function() {
	var c = document.getElementById('container');
	for (var i = 0; i < 5; i++) {
		var d = document.createElement('div');
		d.classList.add('dice');
		c.appendChild(d);
	}
	newGame();
};
window.onload = start;

var newGame = function() {
	var c = document.getElementById('container');
	for (var i = 0; i < c.childNodes; i++) {
		c[i].style.display = 'inline-block';
	}
	roll();
};

var roll = function() {
	var dice = document.getElementsByClassName('dice');
	for (var i = 0; i < dice.length; i++) {
		dice[i].classList.remove('shake');
	  dice[i].offsetWidth = dice[i].offsetWidth;
		dice[i].classList.add('shake');
		dice[i].innerText = Math.floor(Math.random()*6)+1;
	}
};

var iLost = function() {
	var c = document.getElementById('container');
	c.removeChild(c.firstChild);
	if (c.childNodes.length == 0) {
		document.getElementById('all').style.display = 'none';
		window.alert("You're out!");
		window.location.reload();
	}
	roll();
};
</script>
</head>
<body>
<div id="all">
<div id="container"></div>
<div id="buttons">
  <button id="lost" onclick="iLost()">I lost :(</button>
  <button id="next" onclick="roll()">Next hand -></button>
</div>
</div>
</body>
</html>
